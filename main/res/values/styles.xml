<resources>

    <!-- Base application theme. -->



    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/dialog</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/colorAccent</item>
    </style>
    <style name="spinner_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/gradient</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>
    <style name="MySwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#ff0055</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/colorBackground</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#dcdcdc</item>
    </style>
</resources>
